<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Poster -->
    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <!-- Original Title -->
    <TextView
        android:id="@+id/tv_original_title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Title:"
        app:layout_constraintStart_toEndOf="@+id/iv_poster"
        app:layout_constraintTop_toTopOf="@+id/iv_poster" />

    <TextView
        android:id="@+id/tv_original_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_original_title_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_original_title_title"
        tools:text="Avengers"/>


    <!-- Vote Average -->

    <TextView
        android:id="@+id/tv_vote_average_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vote Average:"
        app:layout_constraintStart_toStartOf="@+id/tv_original_title_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_original_title_content"
        tools:text="Vote Average:" />

    <TextView
        android:id="@+id/tv_vote_average_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_vote_average_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_vote_average_title"
        tools:text="6.0/10" />

    <!-- Genres -->

    <!-- Release Date -->
    <TextView
        android:id="@+id/tv_release_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Release Date:"
        app:layout_constraintStart_toStartOf="@+id/tv_vote_average_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_vote_average_content"
        tools:text="Release Date:" />

    <TextView
        android:id="@+id/tv_release_date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_release_date_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_release_date_title"
        tools:text="2017-09-09" />

    <!-- Overview -->
    <TextView
        android:id="@+id/tv_overview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Overview:"
        app:layout_constraintStart_toStartOf="@+id/iv_poster"
        app:layout_constraintTop_toBottomOf="@+id/iv_poster"
        tools:text="Overview:" />

    <TextView
        android:id="@+id/tv_overview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_overview_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_overview_title"
        tools:text="Lorem Ipsum" />


    <!-- Trailers -->
    <!--    <TextView-->
    <!--        android:id="@+id/tv_trailers_title"-->
